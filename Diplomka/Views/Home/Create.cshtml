@model Diplomka.Models.User

@{
    ViewBag.Title = "Новый пользователь";
}

<h2>Добавление нового пользователя</h2>

<form asp-action="Create" asp-controller="Home">
    <div class="form-group">
        <label asp-for="UserName" class="control-label">Имя пользователя</label>
        <input type="text" asp-for="UserName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Password" class="control-label">Пароль</label>
        <input type="text" asp-for="Password" class="form-control" required />
    </div>      

    <div class="form-group">
        <label asp-for="RoleId" class="control-label">Роль</label>
        <select asp-for="RoleId" asp-items="ViewBag.Role" class="form-control"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>
</form>

<a asp-action="BackToHome" class="btn btn-primary"> Отмена</a>
