@model IEnumerable<Diplomka.Models.User>
@{
    ViewData["Title"] = "Список пользователей";
}

<!DOCTYPE html>

<html>
<head>
    <title>Пользователи</title>
</head>

<body>
    <h2>Все пользователи</h2>

    <h5><a class="btn btn-primary mb-3" asp-action="Create"> Новый пользователь</a></h5>

    <table class="table table-bordered table-primary">
        <tr>
            <th>Id пользователя</th>
            <th>Имя пользователя</th>
            <th>Пароль</th>
            <th>Роль</th>            
            <th></th>
            <th></th>

        </tr>
        @foreach (User user in Model)
        {
            <tr  bgcolor = "#FFFFFF">
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Password</td>
                <td>@user.Role.Name</td>
                <td><a class="btn btn-info mb-3" asp-action="Edit" asp-controller="Home" asp-route-id="@user.Id">Изменить</a></td>
                <td><a class="btn btn-warning mb-3" asp-action="Delete" asp-controller="Home" asp-route-id="@user.Id">Удалить</a></td>
            </tr>
        }   
    </table>
</body>
</html>
