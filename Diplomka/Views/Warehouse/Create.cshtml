@model Diplomka.Models.Warehouse

@{
    ViewBag.Title = "Новый склад";
}

<h2>Добавление нового склада</h2>

<form asp-action="Create" asp-controller="Warehouse">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название склада</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address" class="control-label">Адрес</label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>      

    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>
</form>
<a asp-action="BackToHome" class="btn btn-primary"> Отмена</a>
