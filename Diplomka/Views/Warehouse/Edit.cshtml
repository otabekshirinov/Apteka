@model Diplomka.Models.Warehouse
@{
    ViewBag.Title = "Редактирование данных склада";
}

<h3>Изменение данных склада</h3>

<form asp-action="Edit" asp-controller="Warehouse" asp-route-id="@Model.WarehouseID">
    <div class="form-group">
        <label hidden="true" asp-for="WarehouseID" class="control-label">Id склада</label>
        <input type="number" hidden="true" asp-for="WarehouseID" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название склада</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address" class="control-label">Адрес</label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>      

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>

<a asp-action="BackToHome" class="btn btn-primary"> Отмена</a>
