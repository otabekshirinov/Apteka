@model Diplomka.Models.CargoRemnant
@{
    ViewBag.Title = "Удаление данных об остатках груза";
}

<div>
    <dl class="dl-horizontal">
        <dt>Вы уверены, что хотите удалить данные об остатках груза №@Model.CargoRemnantID ?</dt>
    </dl>

    <div>
        <form asp-controller="Warehouse" asp-action="DeleteCargoRemnant" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Удалить" />
            </div>
        </form>
    </div>
</div>
<a asp-action="BackToCargoRemnants" class="btn btn-primary"> Отмена</a>

