@model Diplomka.Models.Grain

@{
    ViewBag.Title = "Новое лекарство";
}

<h2>Добавление нового лекарства</h2>

<form asp-action="Create" asp-controller="Grain" class="col-6" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена</label>
        <input type="text" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Img" class="control-label">Фото</label>
        <input type ="file" asp-for="Img" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary my-3" />
    </div>
</form>
<a asp-action="BackToHome" class="btn btn-primary"> Отмена</a>
