@model Diplomka.Models.Grain
@{
    ViewBag.Title = "Удаление данных о лекарств";
}

<div>
    <dl class="dl-horizontal">
        <dt>Вы уверены, что хотите удалить данные о лекарств №@Model.GrainID ?</dt>
    </dl>

    <div>
        <form asp-controller="Grain" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Удалить" />
            </div>
        </form>
    </div>
</div>
<a asp-action="BackToHome" class="btn btn-primary"> Отмена</a>