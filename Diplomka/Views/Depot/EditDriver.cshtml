@model Diplomka.Models.Driver
@{
    ViewBag.Title = "Редактирование данных";
}

<h3>Изменение данных водителя</h3>

<form asp-action="EditDriver" asp-controller="Depot">
    <div class="form-group">
        <label hidden="true" asp-for="DriverID" class="control-label">Id водителя</label>
        <input type="number" hidden="true" asp-for="DriverID" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FIO" class="control-label">ФИО</label>
        <input type="text" asp-for="FIO" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Номер телефона</label>
        <input type="number" asp-for="PhoneNumber" class="form-control" />
    </div>      
    <div class="form-group">
        <label asp-for="CarID" class="control-label">Машина</label>
        <select asp-for="CarID" asp-items="ViewBag.Car" class="form-control"></select>
    </div>      
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>

<a asp-action="BackToDrivers" class="btn btn-primary"> Отмена</a>
