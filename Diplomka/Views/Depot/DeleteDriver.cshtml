@model Diplomka.Models.Driver
@{
    ViewBag.Title = "Удаление данных о водителе";
}

<div>
    <dl class="dl-horizontal">
        <dt>Вы уверены, что хотите удалить данные об автобазе №@Model.DriverID ?</dt>
    </dl>

    <div>
        <form asp-controller="Depot" asp-action="DeleteDriver" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Удалить" />
            </div>
        </form>
    </div>
</div>
<a asp-action="BackToDrivers" class="btn btn-primary"> Отмена</a>

