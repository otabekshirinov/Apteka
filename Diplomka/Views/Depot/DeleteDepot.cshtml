@model Diplomka.Models.Depot
@{
    ViewBag.Title = "Удаление данных об автобазе";
}

<div>
    <dl class="dl-horizontal">
        <dt>Вы уверены, что хотите удалить данные об автобазе №@Model.DepotID ?</dt>
    </dl>

    <div>
        <form asp-controller="Depot" asp-action="DeleteDepot" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Удалить" />
            </div>
        </form>
    </div>
</div>
<a asp-action="BackToDepots" class="btn btn-primary"> Отмена</a>

