@model Diplomka.Models.Car
@{
    ViewBag.Title = "Удаление данных о машине";
}

<div>
    <dl class="dl-horizontal">
        <dt>Вы уверены, что хотите удалить данные о машине №@Model.CarID ?</dt>
    </dl>

    <div>
        <form asp-controller="Depot" asp-action="DeleteCar" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Удалить" />
            </div>
        </form>
    </div>
</div>
<a asp-action="BackToCars" class="btn btn-primary"> Отмена</a>

