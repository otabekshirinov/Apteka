@model Diplomka.Models.Application


@{
    ViewBag.Title = "Новый заказ";
}

<h3>Создание заявки</h3>

<form asp-action="CreatePlan" asp-controller="Application" class="col-6">
    <div class="form-group">
        <label asp-for="FactoryID" class="control-label">Выбрать заказчика</label>
        <select asp-for="FactoryID" asp-items="ViewBag.Factory" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="WarehouseID" class="control-label">Выбрать склад</label>
        <select asp-for="WarehouseID" asp-items="ViewBag.Warehouse" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="DepotID" class="control-label">Выбрать автобазу</label>
        <select asp-for="DepotID" asp-items="ViewBag.Depot" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="CarID" class="control-label">Выбрать машину</label>
        <select asp-for="CarID" asp-items="ViewBag.Car" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="DriverID" class="control-label">Выбрать водителя</label>
        <select asp-for="DriverID" asp-items="ViewBag.Driver" class="form-control"></select>
    </div>

    <div class="form-group">
        <input type="submit" value="Оформить заявку" class="btn btn-primary" />
    </div>
</form>
<a asp-action="BackToHome" class="btn btn-primary"> Отмена</a>