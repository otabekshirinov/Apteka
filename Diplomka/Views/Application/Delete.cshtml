@model Diplomka.Models.Application
@{
    ViewBag.Title = "Удаление заявки";
}

<div>
    <dl class="dl-horizontal">
        <dt>Вы уверены, что хотите удалить заявку @Model.ApplicationID ?</dt>
    </dl>

    <div>
        <form asp-controller="Application" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Удалить" />
            </div>
        </form>
    </div>
</div>
<a asp-action="BackToHome" class="btn btn-primary"> Отмена</a>