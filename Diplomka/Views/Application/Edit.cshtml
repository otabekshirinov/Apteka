@model Diplomka.Models.Application
@{
    ViewBag.Title = "Редактирование данных заявок";
}

<h3>Изменение данных заявки</h3>

<form asp-action="Edit" asp-controller="Application" asp-route-id="@Model.ApplicationID">
    <div class="form-group">
        <label hidden="true" asp-for="ApplicationID" class="control-label">Id заявки</label>
        <input type="number" hidden="true" asp-for="ApplicationID" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FactoryID" class="control-label">Заказчик</label>
        <select asp-for="FactoryID" asp-items="ViewBag.Factory" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="WarehouseID" class="control-label">Склад</label>
        <select asp-for="WarehouseID" asp-items="ViewBag.Warehouse" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="DepotID" class="control-label">Автобаза</label>
        <select asp-for="DepotID" asp-items="ViewBag.Depot" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="CarID" class="control-label">Машина</label>
        <select asp-for="CarID" asp-items="ViewBag.Car" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="DriverID" class="control-label">Водитель</label>
        <select asp-for="DriverID" asp-items="ViewBag.Driver" class="form-control"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>

<a asp-action="BackToHome" class="btn btn-primary"> Отмена</a>
