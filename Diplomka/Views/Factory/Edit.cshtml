@model Diplomka.Models.Factory
@{
    ViewBag.Title = "Редактирование данных аптеки";
}

<h3>Изменение данных аптетеки</h3>

<form asp-action="Edit" asp-controller="Factory" asp-route-id="@Model.FactoryID">
    <div class="form-group">
        <label hidden="true" asp-for="FactoryID" class="control-label">Id аптеки</label>
        <input type="number" hidden="true" asp-for="FactoryID" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название аптеки</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address" class="control-label">Адрес</label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>      

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>

<a asp-action="BackToHome" class="btn btn-primary"> Отмена</a>
